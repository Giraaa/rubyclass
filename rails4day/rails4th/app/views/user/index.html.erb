<h2>게시판입니다.</h2>
<p><a class="btn btn-primary" role="button" href="/user/new">글쓰기</a></p>
<hr />
<!-- bootstrap 코드 링크
https://getbootstrap.com/docs/4.0/content/tables/#examples -->
<table class="table">
  <thead>
    <tr>
      <th scope="col">id</th>
      <th scope="col">작성자</th>
      <th scope="col">제목</th>
      <th scope="col">내용</th>
      <th scope="col">작성시간</th>
      <th scope="col">보기</th>
      <th scope="col">수정</th>
      <th scope="col">삭제</th>
    </tr>
  </thead>
  <tbody>
    <% @users.each do |user| %>
    <tr>
      <td scope="row"><%= user.id %></td>
      <td><%= user.username %></td>
      <td><%= user.title %></td>
      <td><%= user.content %></td>
      <td><%= user.created_at %></td>
      <td><a href="/user/show/<%= user.id %>">보기</a></td>
      <td><a href="/user/edit/<%= user.id %>">수정</a></td>
      <td><a href="/user/destroy/<%= user.id %>">삭제</a></td>
    </tr>
    <% end %>
  </tbody>
</table>
