<h2> 글쓰기 </h2>
<form  action="/user/update/<%=@user.id%>">
  <div class="form-group">
    <label>작성자</label>
    <input value = "<%=@user.username%>" name= "username" type="text" class="form-control" placeholder="이름써">
  </div>
  <div class="form-group">
    <label>제목</label>
    <input value = "<%=@user.title%>"name="title" type="text" class="form-control" placeholder="제목써">
  </div>
  <div class="form-group">
    <label>내용</label>
    <textarea name="content" class="form-control" rows="3"><%=@user.content%></textarea>
  </div>
  <button type="submit" class="btn btn-primary">끼요욧!</button>
</form>
